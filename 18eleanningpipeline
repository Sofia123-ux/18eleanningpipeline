pipeline {
    agent any

    environment {
        GIT_REPO = 'git@github.com:Sofia123-ux/19eleanningpipeline.git'
        GIT_BRANCH = 'main' // Змініть на потрібну гілку
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    sshagent(['your-ssh-key-id']) { // Додайте SSH-контейнер Jenkins
                        sh 'git clone -b ${GIT_BRANCH} ${GIT_REPO} source_code'
                    }
                }
            }
        }

        stage('Build') {
            steps {
                dir('source_code') {
                    sh './build.sh' // Змініть на команду для вашого проєкту
                }
            }
        }

        stage('Test') {
            steps {
                dir('source_code') {
                    sh './run_tests.sh' // Виконання тестів
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('source_code') {
                    sh './deploy.sh' // Команда для деплою
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build and Deployment Successful!'
        }
        failure {
            echo '❌ Build or Deployment Failed!'
        }
    }
}
